<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pogo.homesweethome.Main2Activity$PlaceholderFragment">

    <Button
        android:text="front door"
        android:onClick="onHomeButton1Click"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/button4"
        android:background="@drawable/lock_on"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="backdoor xD"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/button6"
        android:onClick="onHomeButton2Click"
        android:background="@drawable/lock_off"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <Button
        android:text="livinig room"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/button5"
        android:onClick="onHomeButton3Click"
        android:background="@drawable/light_on"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <Button
        android:text="exterior roller"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/button8"
        android:layout_marginTop="15dp"
        android:onClick="onHomeButton5Click"
        android:background="@drawable/roller_on"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="interior roller"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/button9"
        android:onClick="onHomeButton6Click"
        android:background="@drawable/roller_off"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />


</RelativeLayout>
