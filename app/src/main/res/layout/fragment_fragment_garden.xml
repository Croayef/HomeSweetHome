<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pogo.homesweethome.Main2Activity$PlaceholderFragment">

    <Button
        android:text="#1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/button4"
        android:onClick="onGardenButton1Click"
        android:background="@drawable/light_off"
        android:elevation="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="#2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/button6"
        android:onClick="onGardenButton2Click"
        android:background="@drawable/light_on"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/button7"
        android:onClick="onGardenButton4Click"
        android:background="@drawable/sprinkler_off"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:text="Gate lock"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/button5"
        android:onClick="onGardenButton3Click"
        android:background="@drawable/lock_on"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        />


</RelativeLayout>
